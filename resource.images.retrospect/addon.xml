<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon  id="resource.images.retrospect"
        version="1.0.12"
        name="Retrospect channel logos and artwork"
        provider-name="Bas Rieter">

    <extension point="kodi.resource.images" compile="false" type="logosandartwork"/>

    <requires>
        <import addon="kodi.resource" version="1.0.0"/>
    </requires>

   <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <platform>all</platform>
        <summary lang="en_GB">Artwork and logos for the channels in Retrospect.</summary>
        <description lang="en_GB">Artwork and logos for the channels in Retrospect.</description>
        <source>https://github.com/basrieter/basrieter.github.io/tree/master/resource.images.retrospect</source>
        <license>CC-BY-NC-SA-4.0</license>
        <news>* Moved: RTV Oost textures to RPO channel.
* Changed: Moved RTV Rijnmond textures to RPO channel.
* Changed: Texture paths are not independent of the channel.</news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <banner>banner.jpg</banner>
        </assets>
    </extension>
</addon>